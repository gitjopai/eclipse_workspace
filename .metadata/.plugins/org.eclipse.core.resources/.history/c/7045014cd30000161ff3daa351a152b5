public class Textanalyse {
	public static void main (String []args){
		String zuanalysierenderSatz = "4Das ! ist doch sch√∂n oder 4";
		int zaehler;
		int Konsonanten = 0;
		for (zaehler = 0; zaehler < zuanalysierenderSatz.length(); zaehler++){
			if (zuanalysierenderSatz.charAt(zaehler) == ('a')){
				Konsonanten = Konsonanten +1;
			}
		}
		System.out.println(+Konsonanten);
	}
}